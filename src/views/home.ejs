<!-- Projects Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row mb-4">
      <div class="col">
        <h2 class="fw-bold">Your Projects</h2>
        <p class="lead">Manage and monitor all your deployments in one place</p>
      </div>
      <div class="col-auto">
        <a href="/projects/new" class="btn btn-primary">New Project</a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-body">
            <% if (projects && projects.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Repository</th>
                      <th>Branch</th>
                      <th>Status</th>
                      <th>Last Deployment</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% projects.forEach(project => { %>
                      <tr>
                        <td><a href="/projects/<%= project._id %>"><%= project.name %></a></td>
                        <td><%= project.repositoryUrl %></td>
                        <td><%= project.branch %></td>
                        <td>
                          <% if (project.lastBuildStatus === 'success') { %>
                            <span class="badge bg-success">Success</span>
                          <% } else if (project.lastBuildStatus === 'failure') { %>
                            <span class="badge bg-danger">Failed</span>
                          <% } else if (project.lastBuildStatus === 'pending') { %>
                            <span class="badge bg-warning text-dark">Pending</span>
                          <% } else { %>
                            <span class="badge bg-secondary">None</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (project.lastDeployment) { %>
                            <%= new Date(project.lastDeployment).toLocaleString() %>
                          <% } else { %>
                            Never
                          <% } %>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm">
                            <a href="/projects/<%= project._id %>" class="btn btn-outline-secondary">Details</a>
                            <a href="/deployments/trigger/<%= project._id %>" class="btn btn-outline-primary">Deploy</a>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <p class="mb-3">You don't have any projects yet.</p>
                <a href="/projects/new" class="btn btn-primary">Create Your First Project</a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

