        </svg>
        <%= locals.__ ? __('app.name') : 'MiniCD' %>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><%= locals.__ ? __('navigation.dashboard') : 'Dashboard' %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects"><%= locals.__ ? __('navigation.projects') : 'Projects' %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/deployments"><%= locals.__ ? __('navigation.deployments') : 'Deployments' %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/docs"><%= locals.__ ? __('navigation.documentation') : 'Documentation' %></a>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
