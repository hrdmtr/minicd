            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="/settings"><%= locals.__ ? __('navigation.settings') : 'Settings' %></a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout"><%= locals.__ ? __('navigation.logout') : 'Logout' %></a></li>
            </ul>
          </li>
          <li class="nav-item ms-2">
            <a class="btn btn-outline-light" href="/projects/new">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg me-1" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
              </svg>
              <%= locals.__ ? __('projects.newProject') : 'New Project' %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <%- body %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>